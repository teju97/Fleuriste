	<div class="body"></div>
	<div class="grad"></div>
	<div class="deco">
		<p class="enter">Enter the Item details:</p>
		<form action="/items" method="POST">
			<input type="text" placeholder="Name*" name="itemname" required> &nbsp;&nbsp;&nbsp;&nbsp;
			<input type="text" placeholder="Event*" name="event" required> &nbsp;&nbsp;&nbsp;&nbsp;
			<input type="text" placeholder="Stock*" name="stock" required> &nbsp;&nbsp;&nbsp;&nbsp;
			<input type="text" placeholder="Price*" name="price" required> &nbsp;&nbsp;&nbsp;&nbsp;
			<br>
			<input type="submit" name="submit" value="Submit.">
			<br><br><br><br>
			<table class="items">
				<tr>
					<th>Item ID</th>
					<th>Name</th>
					<th>Event</th> 
					<th>Stock</th>
					<th>Price</th>
				</tr>
				{{#each results}}
				<tr><td>{{this.Item_ID}}</td>
					<td>{{this.Name}}</td>
					<td>{{this.Event}}</td>
					<td>{{this.Stock}}</td>
					<td>{{this.Price}}</td></tr>
					{{/each}}
				</table>
			</div>
